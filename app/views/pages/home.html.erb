<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1554200876-56c2f25224fa?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80);">
  <div class="container">
    <h1>Mentoring, made easier! Buy a mentor!</h1>
    <p>Change your life and learn by meeting a mentor from somewhere around the world.</p>
  </div>
</div>
<div class="container d-flex align-items-center" id="filter-bar">
  <%= render 'filter_bar' %>
</div>

<h2 class="text-center">Meet your mentors!</h2>

<div class="container text-center">
  <div class="cards">
    <% @mentors.each do |mentor| %>
    <%= link_to mentor_path(mentor), class: "text-decoration-none" do %>
    <div class="card" style="width: 18rem;">
      <% if mentor.user.photo.attached? %>
        <%= cl_image_tag mentor.user.photo.key, class: "card-img-top card-img", alt: "profile_img" %>
      <% else %>
        <%= cl_image_tag("https://iupac.org/wp-content/uploads/2018/05/default-avatar.png") %>
      <% end %>
      <div class="card-body text-left">
        <h5 class="card-title"><%= mentor.user.name %></h5>
        <div class="d-flex justify-content-between align-items-end">
          <h6 class="text-muted"><%= mentor.user.job_title %></h6>
          <h6><strong>$<%= mentor.hourly_rate %>/hr</strong></h6>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
